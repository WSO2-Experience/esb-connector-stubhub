<template xmlns="http://ws.apache.org/ns/synapse" name="getAccessToken">
    <sequence>

        <property name="consumerKey" value="hSzr56F8Qr0Ae9ngUoWfWaacxmYa"
                  scope="default" type="STRING"/>
        <property name="consumerSecret" value="sjRj09FklDK11YFAO5Fql_W32ZUa"
                  scope="default" type="STRING"/>
        <property
                expression="fn:concat(get-property('consumerKey'),':',get-property('consumerSecret  '))"
                name="concatedValue" />
        <property expression="base64Encode(get-property('concatedValue'))"
                  name="encodedValue" />

        <property name="grant_type" value="password" scope="default" type="STRING"/>
        <property name="username" value="nifrasismail@gmail.com" scope="default" type="STRING"/>/>
        <property name="password" value="stubHubUser123" scope="default" type="STRING"/>/>
        <property name="scope" value="PRODUCTION" scope="default" type="STRING"/>/>
        <payloadFactory media-type="xml">
            <format>
                <soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
                    <soapenv:Body>
                        <root>
                            <grant_type>{$ctx:grant_type}</grant_type>
                            <username>{$ctx:username}</username>
                            <password>{$ctx:password}</password>
                            <scope>{$ctx:scope}</scope>
                        </root>
                    </soapenv:Body>
                </soapenv:Envelope>
            </format>
        </payloadFactory>
        <header name="Content-Type" value="application/x-www-form-urlencoded" scope="transport"/>
        <header expression="fn:concat('Basic ', get-property('encodedValue'))"
                name="Authorization" scope="transport"/>

        <property name="messageType" scope="axis2" type="STRING" value="application/x-www-form-urlencoded"/>
        <property name="DISABLE_CHUNKING" scope="axis2" type="STRING" value="true"/>
        <log level="full"/>
        <call>
            <endpoint>
                <http method="post"
                      uri-template="https://api.stubhub.com/login"/>
            </endpoint>
        </call>
    </sequence>
</template>